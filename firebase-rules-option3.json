{
  "rules": {
    // Opció 3: Control granular per partides
    // Els jugadors poden llegir i escriure només a les seves partides
    "games": {
      "$gameId": {
        ".read": true,
        ".write": true,
        "players": {
          "$playerId": {
            ".write": "$playerId === newData.child('id').val()"
          }
        }
      }
    },
    "lobbies": {
      ".read": true,
      ".write": true
    },
    "settings": {
      ".read": true,
      ".write": "auth != null"
    }
  }
}
